<div class="container">
  <div class="row">
    <h3>Users</h3>
    <% if @users.empty? %>
      <div><b>No other users for you to talk to :(</b></div>
    <% end %>
    <div class="column">
      <table class="table">
        <tbody>
        <% @users.each do |user| %>
            <tr>
              <%= render partial: 'users/user', locals: { user: user, sent: @messages_sent[user.id], received: @messages_received[user.id] } %>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
