<div class="row col-md-8 col-md-offset-2">
  <div class="panel panel-default" id="hangout">
    <div class="panel-body" id="messages">
      <%= render partial: 'messages/message', collection: @hangout.messages%>
    </div>
  </div>
  <div id="typing-notifier" style="display: none">
    <%= @receiver.email %> is typing...
  </div>

  <%= render partial: 'messages/message_form', locals: { message: @message, hangout: @hangout, receiver: @receiver } %>
</div>

<%= javascript_tag do %>
   subscribe({
    hangoutId: <%= @hangout.id %>,
    senderId: <%= @sender.id %>
   });
<% end %>