<%= form_for message, remote: true, authenticity_token: true do |f| %>
  <%= f.text_field :body, class: "form-control message-body", placeholder: 'Message', data: { textarea: "message"} %>

  <%= f.hidden_field :hangout_id, value: hangout.id %>
  <%= f.hidden_field :receiver_id, value: receiver.id %>
<% end %>